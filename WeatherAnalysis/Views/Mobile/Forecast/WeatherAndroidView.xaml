<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
            xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Cards;assembly=Syncfusion.Maui.Cards"
            xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
            xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges"
            xmlns:local="clr-namespace:WeatherAnalysis"
            xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
            xmlns:viewModel="clr-namespace:WeatherAnalysis"
            xmlns:converter="clr-namespace:WeatherAnalysis"
            xmlns:button="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:effectsView="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
            xmlns:bottomSheet="clr-namespace:Syncfusion.Maui.Toolkit.BottomSheet;assembly=Syncfusion.Maui.Toolkit"
            xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
            xmlns:progressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
            xmlns:listView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:imageExtension="clr-namespace:SampleBrowser.Maui.Base.Converters;assembly=SampleBrowser.Maui.Base"
            xmlns:segmentedControl="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
             x:Class="WeatherAnalysis.WeatherAndroidView">

    <ContentView.Resources>
        <local:LocationViewModel x:Name="locationViewModel" x:Key="locationView" />
        <ResourceDictionary>
            <local:VisibleConverter x:Key="VisibleConverter" />
            <local:CelsiusToFahrenheitConverter x:Key="CelsiusToFahrenheitConverter" />
            <local:StringToImageConverter x:Key="stringToImageConverter" />
            <local:SplineValueConverter x:Key="splineValueonverter" />
            <local:DatetimeToStringConverter x:Key="DatetimeToStringConverter" Format="ddd dd" />

            <SolidColorBrush x:Key="EllipseStrokeColor">
                <SolidColorBrush.Color>
                    <AppThemeBinding Light="#FFFFFF" Dark="#1C1B1D" />
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <SolidColorBrush x:Key="LunarEllipseFillColor">
                <SolidColorBrush.Color>
                    <AppThemeBinding Light="#116DF9" Dark="#BF3B49" />
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <SolidColorBrush x:Key="solarEllipseFillColor">
                <SolidColorBrush.Color>
                    <AppThemeBinding Light="#E2227E" Dark="#C9588E" />
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <SolidColorBrush x:Key="precipitationFillColor">
                <SolidColorBrush.Color>
                    <AppThemeBinding Light="#FF4E4E" Dark="#9B4848" />
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <Color x:Key="popupBackground">#1e1e2f</Color>
            <Color x:Key="strokeLight">#5F5E60</Color>
            <Color x:Key="strokeDark">#E5E1E3</Color>
            <Color x:Key="gridLineLight">#E7E0EC</Color>
            <Color x:Key="gridLineDark">#36323B</Color>

            <LinearGradientBrush x:Key="HumidityGradientBrush"
                     StartPoint="0.5,0"
                     EndPoint="0.5,1">
                <GradientStop Color="LightBlue" Offset="0.0" />
                <GradientStop Color="#99ADD8E6" Offset="0.4" />
                <GradientStop Color="#4DD8E6F0" Offset="0.7" />
                <GradientStop Color="Transparent" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="PurpleGradientBrush"
                     StartPoint="0.5,0"
                     EndPoint="0.5,1">
                <GradientStop Color="#FF9370DB" Offset="0.0" />
                <GradientStop Color="#999370DB" Offset="0.4" />
                <GradientStop Color="#4D9370DB" Offset="0.7" />
                <GradientStop Color="Transparent" Offset="1.0" />
            </LinearGradientBrush>

            <DoubleCollection x:Key="dashArray">
                <x:Double>5</x:Double>
                <x:Double>2</x:Double>
            </DoubleCollection>

            <LinearGradientBrush x:Key="MinTemperatureGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#F4890B" Offset="0.0" />
                <GradientStop Color="#00F4890B" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="MaxTemperatureGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#8000E190" Offset="0.0" />
                <GradientStop Color="#0000E190" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#809215F3" Offset="0.0" />
                <GradientStop Color="#009215F3" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="BlueGradientBrush" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#80116DF9" Offset="0.0" />
                <GradientStop Color="#00116DF9" Offset="1.0" />
            </LinearGradientBrush>

        </ResourceDictionary>

        <Style TargetType="Border">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WeatherAnalysisElementBackground}}"/>
            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"/>
            <Setter Property="StrokeShape" Value="Rectangle 20"/>
            <Setter Property="StrokeThickness" Value="1"/>
        </Style>

        <Color x:Key="LunarEllipseFillColorLight">#116DF9</Color>
        <Color x:Key="LunarEllipseFillColorDark">#BF3B49</Color>
        
    </ContentView.Resources>

    <ContentView.Content>
        <tabView:SfTabView IndicatorWidthMode="Stretch" IndicatorCornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WeatherAnalysisElementBackground}}" x:Name="tabView" TabBarPlacement="Bottom">
            <tabView:SfTabView.Items>
                <tabView:SfTabItem Header="&#xe795;" FontSize="26" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" FontFamily="MauiSampleFontIcon">
                    <tabView:SfTabItem.Content>
                        <Grid Padding="16"  BackgroundColor="{AppThemeBinding Light={StaticResource WeatherAnalysisBackgroundLight}, Dark={StaticResource WeatherAnalysisBackgroundDark}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="250" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--Weather Tile-->
                            <Grid  Grid.Row="0">
                                <Border StrokeThickness="0" VerticalOptions="Center" Margin="0,16,0,16" HorizontalOptions="FillAndExpand" StrokeShape="RoundRectangle 20"  HeightRequest="216"  >

                                    <!-- Background with Gradient -->
                                    <Border.Background>
                                        <LinearGradientBrush>
                                            <GradientStop Color="#028BC6" Offset="0.0" />
                                            <GradientStop Color="#0285C6" Offset="0.5" />
                                            <GradientStop Color="#02A2C6" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Border.Background>

                                    <!-- Background Image: Now inside the Border -->
                                    <Border.Clip>
                                        <RoundRectangleGeometry Rect="0,0,380,216"
                                    CornerRadius="20" />
                                    </Border.Clip>

                                    <Grid>
                                        <!-- Background Image (Placed inside Border) -->
                                        <Image Source="{imageExtension:SfImageResource cloudbackground.png}" Opacity="0.3" Aspect="AspectFill"  HeightRequest="216"  HorizontalOptions="FillAndExpand" VerticalOptions="Fill"/>

                                        <!-- Weather Card Content -->
                                        <Grid Padding="24,24,24,40" RowDefinitions="*,*,70">
                                            <Grid.BindingContext>
                                                <local:TodayWeatherTileViewModel />
                                            </Grid.BindingContext>

                                            <Grid Grid.Row="0" VerticalOptions="Start" >
                                                <HorizontalStackLayout>
                                                    <Label Text="&#xe76e;" VerticalOptions="Center" Margin="0,0,10,0"  HorizontalOptions="Start" FontFamily="MauiSampleFontIcon"  FontSize="25" TextColor="White" />
                                                    <Label Text="New York" FontSize="16" FontFamily="RobotoMedium" TextColor="White" />
                                                </HorizontalStackLayout>

                                            </Grid>

                                            <Label Grid.Row="1" Text="{Binding Today, StringFormat='{}{0:hh:mm tt, ddd, dd MMM yyyy}'}" FontSize="12" 
                                                   FontFamily="RobotoMedium" TextColor="{DynamicResource SeriesColorWhite}"   VerticalOptions="Start" />

                                            <Grid  Grid.Row="2" VerticalOptions="Start" ColumnDefinitions="auto,*" >
                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel x:Name="dayWeatherViewModel" />
                                                </Grid.BindingContext>
                                                <Grid VerticalOptions="Start" ColumnDefinitions="*,*" Grid.Column="0">
                                                    <Label FontSize="64"
                                                           Grid.Column="0"
                                                            FontFamily="RobotoMedium" 
                                                            TextColor="{DynamicResource SeriesColorWhite}"
                                                            VerticalOptions="Start">
                                                        <Label.Text>
                                                            <MultiBinding Converter="{StaticResource Key=CelsiusToFahrenheitConverter}" ConverterParameter="{}{0:0}°">
                                                                <Binding Path="Temperature" Source="{x:Reference dayWeatherViewModel}" />
                                                                <Binding Path="IsCelsius" Source="{x:Reference dayWeatherViewModel}" />
                                                            </MultiBinding>
                                                        </Label.Text>
                                                    </Label>
                                                    <Label TextColor="{DynamicResource SeriesColorWhite}" FontFamily="RobotoMedium" Grid.Column="1" Text="c" VerticalOptions="Start" Margin="05,0,0,0" FontSize="32" />
                                                </Grid>

                                                <Image Source="{Binding WeatherCollection, Converter={StaticResource stringToImageConverter}, ConverterParameter=76 , Source={x:Reference dayWeatherInfoViewModel}}"
                           WidthRequest="80" HeightRequest="96"
                           HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                           Margin="0,0,10,0"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                </Border>
                            </Grid>

                            <ScrollView Margin="0,10,0,0" Grid.Row="1">

                                <VerticalStackLayout>

                                    <Grid ColumnSpacing="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0"  HeightRequest="56"  StrokeShape="RoundRectangle 10"  >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel x:Name="dayWeatherinfoViewModelForHumidity"/>
                                                </Grid.BindingContext>
                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe806;" FontFamily="MauiSampleFontIcon" WidthRequest="20" FontSize="25" VerticalOptions="Center" />

                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Humidity" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding Humidity ,StringFormat='{}{0:0}%', Source={x:Reference dayWeatherinfoViewModelForHumidity}}" Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />
                                            </Grid>


                                        </Border>

                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1"  HeightRequest="56" StrokeShape="RoundRectangle 10" >

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel x:Name="dayWeatherinfoViewModelForRain"/>
                                                </Grid.BindingContext>

                                                <Label Text="&#xe793;" FontFamily="MauiSampleFontIcon" FontSize="25" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" Grid.RowSpan="2"  />
                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Rain" Grid.Column="1"  HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding PrecipitationInMM, StringFormat='{}{0:0}° mm', Source={x:Reference dayWeatherinfoViewModelForRain}}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />
                                            </Grid>

                                        </Border>

                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0,12,0,0" Grid.Row="1" Grid.Column="0"  HeightRequest="56" StrokeShape="RoundRectangle 10" >

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel />
                                                </Grid.BindingContext>

                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe78f;" FontFamily="MauiSampleFontIcon"  HorizontalOptions="Center" FontSize="25" VerticalOptions="Center" />

                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Wind"  Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding WindSpeed, StringFormat='{}{0:0} km/h'}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />

                                            </Grid>
                                        </Border>

                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0,12,0,0" Grid.Row="1" Grid.Column="1"  HeightRequest="56" StrokeShape="RoundRectangle 10" >

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel />
                                                </Grid.BindingContext>

                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe805;" FontFamily="MauiSampleFontIcon"  HorizontalOptions="Center" FontSize="25" VerticalOptions="Center" />


                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Dew"  Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding Dew, StringFormat='{}{0:0}° c'}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />

                                            </Grid>

                                        </Border>

                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0,12,0,0" Grid.Row="2" Grid.Column="0"  HeightRequest="56" StrokeShape="RoundRectangle 10"  >

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel />
                                                </Grid.BindingContext>

                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe78e;" FontFamily="MauiSampleFontIcon"  HorizontalOptions="Center" FontSize="25" VerticalOptions="Center" />
                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="UV Index"  Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding UVIndex}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />

                                            </Grid>

                                        </Border>

                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0,12,0,0" Grid.Row="2" Grid.Column="1"  HeightRequest="56" StrokeShape="RoundRectangle 10" >

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel />
                                                </Grid.BindingContext>

                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe804;" FontFamily="MauiSampleFontIcon"  HorizontalOptions="Center" FontSize="25" VerticalOptions="Center" />
                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Pressure" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding HourlyWeatherData[0].Pressure , StringFormat='{}{0:0}° mb'}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />

                                            </Grid>

                                        </Border>

                                        <Border StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Margin="0,12,0,0" Grid.Row="3" Grid.Column="0" HeightRequest="56" StrokeShape="RoundRectangle 10" >

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel />
                                                </Grid.BindingContext>

                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe752;" FontFamily="MauiSampleFontIcon"  HorizontalOptions="Center" FontSize="25" VerticalOptions="Center" />
                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Visibility"  Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding HourlyWeatherData[0].Visibility, StringFormat='{}{0:0}° km'}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />

                                            </Grid>

                                        </Border>

                                        <Border StrokeThickness="0" HorizontalOptions="FillAndExpand" Margin="0,12,0,0" VerticalOptions="Start" Grid.Row="3" Grid.Column="1"  HeightRequest="56" StrokeShape="RoundRectangle 10" >


                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel />
                                                </Grid.BindingContext>

                                                <Label Grid.Column="0" Grid.RowSpan="2" Text="&#xe795;" FontFamily="MauiSampleFontIcon" HorizontalOptions="Center" FontSize="25" VerticalOptions="Center" />
                                                <Label FontFamily="RobotoMedium" FontSize="14" Text="Cloudiness"  Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Grid.Row="0"  />
                                                <Label FontFamily="Roboto" FontSize="12" Text="{Binding Humidity ,StringFormat='{}{0:0}%'}"  Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start"  Grid.Row="1"  />
                                            </Grid>

                                        </Border>
                                    </Grid>

                                    <!--Hourly Forecast-->
                                    <Grid Padding="0,16,0,16" x:Name="hourlyForecast">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="100" />
                                        </Grid.RowDefinitions>

                                        <Grid.BindingContext>
                                            <local:DayWeatherInfoViewModel x:Name="dayWeatherInfo" />
                                        </Grid.BindingContext>

                                        <Label Text="Hourly Forecast"  Grid.Row="0" HorizontalOptions="Start" FontFamily="RobotoMedium" />

                                        <ScrollView  Grid.Column="1" Grid.Row="1" x:Name="HorizontalScrollView1" Orientation="Horizontal" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
                                            <CollectionView 
                                                            ItemsSource="{Binding HourlyWeatherData}"
                                                            SelectionMode="None"
                                                            VerticalScrollBarVisibility="Never"
                                                            HorizontalScrollBarVisibility="Never">

                                                <CollectionView.ItemsLayout>
                                                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="12" />
                                                </CollectionView.ItemsLayout>

                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border 
                                                                x:Name="ShowCaseBorder"
                                                                StrokeThickness="2" WidthRequest="64" HeightRequest="96"
                                                                Stroke="{AppThemeBinding Light=White, Dark={StaticResource WeatherAnalysisElementBackground}}"
                                                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WeatherAnalysisElementBackground}}"
                                                                StrokeShape="RoundRectangle 8">

                                                            <Grid Margin="8" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WeatherAnalysisElementBackground}}" HeightRequest="96" WidthRequest="65" x:Name="GridContent" >

                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="*" />
                                                                </Grid.RowDefinitions>

                                                                <Label Text="{Binding DateTime, StringFormat='{0:h tt}'}"  FontSize="12" FontFamily="RobotoMedium" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" />

                                                                <Image Grid.Row="1" WidthRequest="36" HeightRequest="36" Source="{Binding Weather, Converter={StaticResource stringToImageConverter }, ConverterParameter=44}"   />

                                                                <Label Grid.Row="2" TextColor="{DynamicResource ContentForeground}" VerticalOptions="Center"  FontSize="14" FontFamily="RobotoMedium" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                                                                    <Label.FormattedText>
                                                                        <MultiBinding Converter="{StaticResource CelsiusToFahrenheitConverter}"  ConverterParameter="{}{0:0}°">
                                                                            <Binding Path="Temperature"   />
                                                                            <Binding Path="IsCelsius" Source="{x:Reference dayWeatherInfo}" />
                                                                        </MultiBinding>
                                                                    </Label.FormattedText>
                                                                </Label>

                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </ScrollView>
                                    </Grid>

                                    <!--Summmary-->
                                    <Border StrokeThickness="0" Margin="0,12,0,0" HeightRequest="304" HorizontalOptions="FillAndExpand"  StrokeShape="RoundRectangle 10" >

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0" ColumnDefinitions="*,155" >

                                                <Grid.BindingContext>
                                                    <viewModel:SummaryViewModel />
                                                </Grid.BindingContext>
                                                <Label FontFamily="RobotoMedium"  Text="Summary" Margin="16,20,0,0"  FontSize="14"  HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" />
                                                <Border Stroke="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" StrokeThickness="0.3" Padding="0" HeightRequest="35" Margin="16,0,16,0"  MinimumWidthRequest="132" StrokeShape="RoundRectangle 10" Grid.Row="0" Grid.Column="1">
                                                    <editors:SfComboBox x:Name="comboBox"
                                                                         Grid.Column="1"
                                                                         IsDropDownOpen="False"                                                                        
                                                                         HorizontalTextAlignment="Center"
                                                                         IsClearButtonVisible="False"
                                                                        HeightRequest="38"
                                                                        Margin="0"
                                                                        Stroke="Transparent"
                                                                        FontFamily="Roboto"                                                                        
                                                                         IsEditable="False"                                                                        
                                                                        FontSize="14"
                                                                        DisplayMemberPath="Name"
                                                                        WidthRequest="132"
                                                                        HorizontalOptions="Fill"
                                                                        TextMemberPath="Name"
                                                                         SelectionChanged="comboBox_SelectionChanged"
                                                                         ItemsSource="{Binding SummaryLists}"
                                                                         Text="Temperature">
                                                        <editors:SfComboBox.BindingContext>
                                                            <local:SummaryViewModel />
                                                        </editors:SfComboBox.BindingContext>
                                                    </editors:SfComboBox>
                                                </Border>

                                            </Grid>
                                            <Grid Grid.Row="1"  >
                                                <Grid.BindingContext>
                                                    <local:DayWeatherInfoViewModel x:Name="dayWeatherInfoForChart" />
                                                </Grid.BindingContext>
                                                <chart:SfCartesianChart  Margin="16" x:Name="TemperatureChart" BackgroundColor="{AppThemeBinding Light=White, Dark=Black}" >

                                                    <!--X Axis (Time)-->
                                                    <chart:SfCartesianChart.XAxes>
                                                        <chart:DateTimeAxis Interval="5" TickPosition="Outside"   EdgeLabelsDrawingMode="Shift" ShowMajorGridLines="False">
                                                            <chart:DateTimeAxis.LabelStyle>
                                                                <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" LabelFormat="h tt" />
                                                            </chart:DateTimeAxis.LabelStyle>
                                                            <chart:DateTimeAxis.MinorTickStyle>
                                                                <chart:ChartAxisTickStyle Stroke="Transparent" StrokeWidth="0" />
                                                            </chart:DateTimeAxis.MinorTickStyle>
                                                            <chart:DateTimeAxis.AxisLineStyle>
                                                                <chart:ChartLineStyle Stroke="Transparent" />
                                                            </chart:DateTimeAxis.AxisLineStyle>
                                                            <chart:DateTimeAxis.MajorTickStyle>
                                                                <chart:ChartAxisTickStyle Stroke="Transparent" />
                                                            </chart:DateTimeAxis.MajorTickStyle>
                                                        </chart:DateTimeAxis>
                                                    </chart:SfCartesianChart.XAxes>

                                                    <!--Y Axis (Temperature)-->
