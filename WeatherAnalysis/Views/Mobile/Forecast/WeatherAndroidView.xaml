                <tabView:SfTabItem Header="&#xe808;" FontSize="26" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" FontFamily="MauiSampleFontIcon">
                    <tabView:SfTabItem.Content>

                        <ScrollView>
                            <Grid Padding="16" BackgroundColor="{AppThemeBinding Light={StaticResource WeatherAnalysisBackgroundLight}, Dark={StaticResource WeatherAnalysisBackgroundDark}}" RowDefinitions="*,*,*,*">

                                <Border StrokeThickness="0" Grid.Row="0" Margin="0,12,0,0" HeightRequest="264" HorizontalOptions="FillAndExpand"  StrokeShape="RoundRectangle 10" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label FontFamily="RobotoMedium"  Text="Temperature" Margin="16,20,0,0"  FontSize="14"  HorizontalOptions="Start" Grid.Row="0" />

                                        <Grid Grid.Row="1" >
                                            <Grid.BindingContext>
                                                <local:DayWeatherInfoViewModel x:Name="dayWeatherInfoForChart2" />
                                            </Grid.BindingContext>
                                            <chart:SfCartesianChart Margin="16"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">

                                                <chart:SfCartesianChart.XAxes>
                                                    <chart:DateTimeAxis  TickPosition="Outside"   EdgeLabelsDrawingMode="Shift" ShowMajorGridLines="False">
                                                        <chart:DateTimeAxis.LabelStyle>
                                                            <chart:ChartAxisLabelStyle  LabelFormat="h tt" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray}, Dark={StaticResource White}}" />
                                                        </chart:DateTimeAxis.LabelStyle>
                                                        <chart:DateTimeAxis.MinorTickStyle>
                                                            <chart:ChartAxisTickStyle Stroke="Transparent" StrokeWidth="0" />
                                                        </chart:DateTimeAxis.MinorTickStyle>
                                                    </chart:DateTimeAxis>
                                                </chart:SfCartesianChart.XAxes>

                                                <!--Y Axis (Temperature)-->
                                                <chart:SfCartesianChart.YAxes>
                                                    <chart:NumericalAxis  IsVisible="False" Interval="20" Minimum="7" EdgeLabelsVisibilityMode="Visible"  ShowMajorGridLines="True">
                                                        <chart:NumericalAxis.MajorGridLineStyle>
                                                            <chart:ChartLineStyle Stroke="{AppThemeBinding Light={StaticResource gridLineLight},Dark={StaticResource gridLineDark}}" />
                                                        </chart:NumericalAxis.MajorGridLineStyle>
                                                    </chart:NumericalAxis>
                                                </chart:SfCartesianChart.YAxes>

                                                <chart:StackingAreaSeries ItemsSource="{Binding HourlyWeatherData}"
                              XBindingPath="DateTime" Fill="{StaticResource MaxTemperatureGradient}" Stroke="#00E190" StrokeWidth="2.5"
                              YBindingPath="Temperature"/>
                                                <chart:StackingAreaSeries ItemsSource="{Binding HourlyWeatherData}"
                                XBindingPath="DateTime" Fill="{StaticResource MinTemperatureGradient}" Stroke="#F4890B" StrokeWidth="2.5"
                                YBindingPath="Temperature"/>
                                            </chart:SfCartesianChart>
                                        </Grid>

                                    </Grid>

                                </Border>

                                <Border StrokeThickness="0" Grid.Row="1" Margin="0,12,0,0" HeightRequest="264" HorizontalOptions="FillAndExpand"  StrokeShape="RoundRectangle 10" >

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label FontFamily="RobotoMedium"  Text="Precipitation" Margin="16,20,0,0"  FontSize="14"  HorizontalOptions="Start" Grid.Row="0" />

                                        <Grid Grid.Row="1" >
                                            <Grid.BindingContext>
                                                <local:DayWeatherInfoViewModel  />
                                            </Grid.BindingContext>
                                            <chart:SfCartesianChart Margin="16"  BackgroundColor="{AppThemeBinding Light=White, Dark=Black}" >

                                                <!--X Axis (Time)-->
                                                <chart:SfCartesianChart.XAxes>
                                                    <chart:DateTimeAxis Interval="5" TickPosition="Outside"   EdgeLabelsDrawingMode="Shift" ShowMajorGridLines="False">
                                                        <chart:DateTimeAxis.LabelStyle>
                                                            <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" LabelFormat="h tt" />
                                                        </chart:DateTimeAxis.LabelStyle>
                                                        <chart:DateTimeAxis.MinorTickStyle>
                                                            <chart:ChartAxisTickStyle Stroke="Transparent" StrokeWidth="0" />
                                                        </chart:DateTimeAxis.MinorTickStyle>
                                                    </chart:DateTimeAxis>
                                                </chart:SfCartesianChart.XAxes>

                                                <!--Y Axis (Temperature)-->
                                                <chart:SfCartesianChart.YAxes>
                                                    <chart:NumericalAxis IsVisible="False"  ShowMajorGridLines="True">
                                                        <chart:NumericalAxis.MajorGridLineStyle>
                                                            <chart:ChartLineStyle Stroke="{AppThemeBinding Light={StaticResource gridLineLight},Dark={StaticResource gridLineDark}}" />
                                                        </chart:NumericalAxis.MajorGridLineStyle>
                                                    </chart:NumericalAxis>
                                                </chart:SfCartesianChart.YAxes>

                                                <!--Gradient Spline Series-->

                                                <chart:FastLineSeries ItemsSource="{Binding HourlyWeatherData}"
                                                                      XBindingPath="DateTime"
                                                                      Fill="{StaticResource precipitationFillColor}"
                                                                      StrokeWidth="2"
                                                                      YBindingPath="Precipitation"/>

                                            </chart:SfCartesianChart>
                                        </Grid>

                                    </Grid>

                                </Border>

                                <Border StrokeThickness="0" Grid.Row="2" Margin="0,12,0,0" HeightRequest="264" HorizontalOptions="FillAndExpand"  StrokeShape="RoundRectangle 10" >

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label FontFamily="RobotoMedium"  Text="Humidity" Margin="16,20,0,0"  FontSize="14"  HorizontalOptions="Start" Grid.Row="0" />

                                        <Grid Grid.Row="1" >
                                            <Grid.BindingContext>
                                                <local:DayWeatherInfoViewModel  />
                                            </Grid.BindingContext>
                                            <chart:SfCartesianChart Margin="16"  BackgroundColor="{AppThemeBinding Light=White, Dark=Black}" >

                                                <!--X Axis (Time)-->
                                                <chart:SfCartesianChart.XAxes>
                                                    <chart:DateTimeAxis Interval="5" TickPosition="Outside"   EdgeLabelsDrawingMode="Shift" ShowMajorGridLines="False">
                                                        <chart:DateTimeAxis.LabelStyle>
                                                            <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" LabelFormat="h tt" />
                                                        </chart:DateTimeAxis.LabelStyle>
                                                        <chart:DateTimeAxis.MinorTickStyle>
                                                            <chart:ChartAxisTickStyle Stroke="Transparent" StrokeWidth="0" />
                                                        </chart:DateTimeAxis.MinorTickStyle>
                                                    </chart:DateTimeAxis>
                                                </chart:SfCartesianChart.XAxes>

                                                <!--Y Axis (Temperature)-->
                                                <chart:SfCartesianChart.YAxes>
                                                    <chart:NumericalAxis IsVisible="False"   EdgeLabelsVisibilityMode="Visible" Minimum="0" ShowMajorGridLines="True">
                                                        <chart:NumericalAxis.MajorGridLineStyle>
                                                            <chart:ChartLineStyle Stroke="{AppThemeBinding Light={StaticResource gridLineLight},Dark={StaticResource gridLineDark}}" />
                                                        </chart:NumericalAxis.MajorGridLineStyle>
                                                    </chart:NumericalAxis>
                                                </chart:SfCartesianChart.YAxes>

                                                <!--Gradient Spline Series-->
                                                <chart:SplineAreaSeries ShowDataLabels="False" Stroke="#116DF9" ItemsSource="{Binding HourlyWeatherData}" XBindingPath="DateTime" YBindingPath="Humidity" StrokeWidth="2" EnableTooltip="False" ShowTrackballLabel="True" Type="Cardinal" Fill="{StaticResource BlueGradientBrush}"  />

                                                <chart:SplineAreaSeries ItemsSource="{Binding HourlyWeatherData}"
                                                                             XBindingPath="DateTime"
                                                                             YBindingPath="Feelslike"  
                                                                             Stroke="{AppThemeBinding Light={StaticResource strokeLight}, Dark={StaticResource strokeDark}}"      
                                                                            Fill="Transparent"
                                                                             StrokeWidth="1.5"
                                                                             StrokeDashArray="{StaticResource dashArray}"/>

                                            </chart:SfCartesianChart>
                                        </Grid>

                                    </Grid>

                                </Border>

                                <Border StrokeThickness="0" Grid.Row="3" Margin="0,12,0,0" HeightRequest="264" HorizontalOptions="FillAndExpand"  StrokeShape="RoundRectangle 10" >

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Label FontFamily="RobotoMedium"  Text="Wind" Margin="16,20,0,0"  FontSize="14"  HorizontalOptions="Start" Grid.Row="0" />

                                        <Grid Grid.Row="1" >
                                            <Grid.BindingContext>
                                                <local:DayWeatherInfoViewModel  />
                                            </Grid.BindingContext>
                                            <chart:SfCartesianChart Margin="16"  BackgroundColor="{AppThemeBinding Light=White, Dark=Black}" >

                                                <!--X Axis (Time)-->
                                                <chart:SfCartesianChart.XAxes>
                                                    <chart:DateTimeAxis Interval="5" TickPosition="Outside"   EdgeLabelsDrawingMode="Shift" ShowMajorGridLines="False">
                                                        <chart:DateTimeAxis.LabelStyle>
                                                            <chart:ChartAxisLabelStyle TextColor="{AppThemeBinding Light=Black, Dark=White}" LabelFormat="h tt" />
                                                        </chart:DateTimeAxis.LabelStyle>
                                                        <chart:DateTimeAxis.MinorTickStyle>
                                                            <chart:ChartAxisTickStyle Stroke="Transparent" StrokeWidth="0" />
                                                        </chart:DateTimeAxis.MinorTickStyle>
                                                    </chart:DateTimeAxis>
                                                </chart:SfCartesianChart.XAxes>

                                                <!--Y Axis (Temperature)-->
                                                <chart:SfCartesianChart.YAxes>
                                                    <chart:NumericalAxis IsVisible="False"   ShowMajorGridLines="True">
                                                        <chart:NumericalAxis.MajorGridLineStyle>
                                                            <chart:ChartLineStyle Stroke="{AppThemeBinding Light={StaticResource gridLineLight},Dark={StaticResource gridLineDark}}" />
                                                        </chart:NumericalAxis.MajorGridLineStyle>
                                                    </chart:NumericalAxis>
                                                </chart:SfCartesianChart.YAxes>

                                                <chart:AreaSeries ItemsSource="{Binding HourlyWeatherData}" XBindingPath="DateTime" YBindingPath="WindSpeed" Stroke="#9215F3" Fill="{StaticResource PurpleGradient}" />

                                            </chart:SfCartesianChart>
                                        </Grid>
                                    </Grid>
                                </Border>

                            </Grid>
                        </ScrollView>

                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="&#xe73b;" FontSize="26" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" FontFamily="MauiSampleFontIcon">

                    <tabView:SfTabItem.Content>
                        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource WeatherAnalysisElementBackground}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="70" />
                                    <RowDefinition Height="70" />
                                    <RowDefinition Height="70" />
                                    <RowDefinition Height="70" />
                                </Grid.RowDefinitions>


                                <effectsView:SfEffectsView x:Name="themeGrid" AnimationCompleted="themeGrid_AnimationCompleted">
                                    <Grid Grid.Row="0" Padding="16,12,0,0" RowDefinitions="*,*">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition  Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"  VerticalOptions="Center" HorizontalOptions="Start" Grid.RowSpan="2" FontSize="25" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" Text="&#xE7FA;" FontFamily="MauiSampleFontIcon" WidthRequest="24" HeightRequest="24" />
                                        <Label Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start" Grid.Row="0" Text="Theme" TextColor="{AppThemeBinding Light=#313032, Dark=#FFFFFF}" FontSize="16"/>
                                        <Label Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="1" Text="Light" x:Name="themeLabel" FontSize="14" TextColor="{AppThemeBinding Light=#5F5E60, Dark=#929092}"/>

                                    </Grid>
                                </effectsView:SfEffectsView>

                                <effectsView:SfEffectsView Grid.Row="1" Padding="16,0,0,0">
                                    <Grid RowDefinitions="*,*">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition  Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Grid.RowSpan="2" Text="&#xe75e;" FontSize="25" FontFamily="MauiSampleFontIcon" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" WidthRequest="34" HeightRequest="34" />
                                        <Label Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start" Grid.Row="0" Text="Notification" TextColor="{AppThemeBinding Light=#313032, Dark=#FFFFFF}" FontSize="16" />
                                        <Label Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="1" Text="Daily forecast, alerts" FontSize="14" TextColor="{AppThemeBinding Light=#5F5E60, Dark=#929092}"/>

                                    </Grid>
                                </effectsView:SfEffectsView>

                                <effectsView:SfEffectsView Grid.Row="2" x:Name="helpAndSupport" AnimationCompleted="helpAndSupport_AnimationCompleted" Padding="16,0,0,0">
                                    <Grid  RowDefinitions="*,*">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition  Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" FontSize="25" Grid.RowSpan="2" Text="&#xe71f;" FontFamily="MauiSampleFontIcon" TextColor="{AppThemeBinding Light={StaticResource WeatherAnalysisGraphiteGray},Dark={StaticResource White}}" WidthRequest="34" HeightRequest="34" />
                                        <Label Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start" Grid.Row="0" Text="Help &amp; Support" TextColor="{AppThemeBinding Light=#313032, Dark=#FFFFFF}" FontSize="16" />
                                        <Label Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="1" Text="Syncfusion MAUI Controls" FontSize="14" TextColor="{AppThemeBinding Light=#5F5E60, Dark=#929092}"/>

                                    </Grid>
                                </effectsView:SfEffectsView>

                            </Grid>

                            <bottomSheet:SfBottomSheet Background="{AppThemeBinding Dark={StaticResource WeatherAnalysisBackgroundDark}, Light={StaticResource WeatherAnalysisLavenderBlush}}" x:Name="themeBottomSheet" CornerRadius="15, 15, 0, 0" HalfExpandedRatio="0.35" ContentPadding="10">
                                <bottomSheet:SfBottomSheet.BottomSheetContent>
                                    <VerticalStackLayout Padding="5" Background="Transparent" BackgroundColor="Transparent" Spacing="5" x:Name="themeBottomSheetContent">


                                        <Grid Margin="0,0,0,15">
                                            <Label Text="Theme" FontSize="22" FontFamily="RobotoMedium" />
                                        </Grid>

                                        <button:SfRadioGroup>
                                            <button:SfRadioButton Text="Light" x:Name="lightthemebutton" FontSize="16" Value="Light" StateChanging="SfRadioButton_StateChanging" UncheckedColor="{AppThemeBinding Light= {StaticResource Black}, Dark={StaticResource White}}" />
                                            <button:SfRadioButton Text="Dark" x:Name="darkthemebutton" FontSize="16" Value="Dark" StateChanging="SfRadioButton_StateChanging_1" UncheckedColor="{AppThemeBinding Light= {StaticResource Black}, Dark={StaticResource White}}" />
                                        </button:SfRadioGroup>

                                    </VerticalStackLayout>
                                </bottomSheet:SfBottomSheet.BottomSheetContent>
                            </bottomSheet:SfBottomSheet>

                            <!-- Help & Support Overlay placed above everything else -->
                            <Grid x:Name="HelpSupportOverlay"  BackgroundColor="#80000000"  IsVisible="False" HorizontalOptions="Fill"  VerticalOptions="Fill"  ZIndex="99"  Padding="24">

                                <Grid HorizontalOptions="Center" VerticalOptions="Center"  Visual="Material">

                                    <Border Background="{AppThemeBinding Light=White, Dark={StaticResource popupBackground}}"  StrokeShape="RoundRectangle 20" Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#5E5E5E}"  StrokeThickness="1"  WidthRequest="320" Padding="25"  ZIndex="100" >

                                        <VerticalStackLayout Spacing="20">
                                            <Label Text="Open Link"
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                                   HorizontalTextAlignment="Center" />

                                            <Label Text="You're about to open an external link. Continue?" MaxLines="2" LineBreakMode="WordWrap"  FontSize="15" TextColor="{AppThemeBinding Light=Black, Dark=White}"  HorizontalTextAlignment="Center" />

                                            <HorizontalStackLayout Spacing="20"  HorizontalOptions="Center">
                                                <Button Text="Cancel"  Visual="Material"
                                                        BackgroundColor="Transparent"
                                                        BorderColor="{AppThemeBinding Light=#7e57c2, Dark=#c3a6ff}"
                                                        TextColor="{AppThemeBinding Light=#7e57c2, Dark=#c3a6ff}"
                                                        BorderWidth="1"
                                                        WidthRequest="100"
                                                        HeightRequest="48"
                                                        CornerRadius="24"
                                                        Clicked="OnCancelOpenLink" />
                                                <Button Text="Continue" Visual="Material" BackgroundColor="{AppThemeBinding Light=#7e57c2, Dark=#c3a6ff}" TextColor="White"  WidthRequest="100" HeightRequest="48"  CornerRadius="24" Clicked="OnConfirmOpenLink" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
            </tabView:SfTabView.Items>
        </tabView:SfTabView>
    </ContentView.Content>

</ContentView>
